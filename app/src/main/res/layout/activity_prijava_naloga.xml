<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout

        android:id="@+id/Main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey" >

        <!-- ULICA POSLOVNOG PROSTORA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <TextView
                android:id="@+id/txtDatum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datum"
                android:textColor="#a5d4e2"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <EditText
                android:id="@+id/editDatum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:maxLength="50"
                android:inputType="text"
                android:textSize="25sp" >
                <requestFocus />
            </EditText>
        </LinearLayout>


        <!-- KUCNI BROJ POSLOVNOG PROSTORA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <TextView
                android:id="@+id/txtKupac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kupac"
                android:textColor="#a5d4e2"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <EditText
                android:id="@+id/editKupac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:maxLength="4"

                android:textSize="25sp" >
            </EditText>
        </LinearLayout>

        <!-- POSTANSKI BROJ POSLOVNOG PROSTORA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <TextView
                android:id="@+id/txtUredaj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uređaj"
                android:textColor="#a5d4e2"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <EditText
                android:id="@+id/editUredaj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:maxLength="5"

                android:textSize="25sp" >
            </EditText>
        </LinearLayout>

        <!-- NASELJE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <TextView
                android:id="@+id/txtSerijskiBr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serijski Broj"
                android:textColor="#a5d4e2"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <EditText
                android:id="@+id/editSerijskiBr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:maxLength="40"
                android:inputType="number"
                android:textSize="25sp" >
            </EditText>
        </LinearLayout>


        <!-- DATUM PRIMJENE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#a5d4e2"
                android:textSize="25sp"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/editStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:maxLength="40"
                android:inputType="text"
                android:textSize="25sp" >
            </EditText>
        </LinearLayout>


        <!-- RADNO VRIJEME POSLOVNOG PROSTORA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <TextView
                android:id="@+id/txtKvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kvar"
                android:textColor="#a5d4e2"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            <EditText
                android:id="@+id/editKvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:maxLength="100"
                android:inputType="text"
                android:textSize="25sp" >
            </EditText>
        </LinearLayout>


        <!-- Check box za odjavu poslovnog prostora -->


        <!-- BUTTON POSALJI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnPosalji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue"
                android:text="Pošalji"
                android:onClick="PosaljiPP"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>